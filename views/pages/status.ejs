<%- include('../template/head') -%>
<main class="container-login">
    <%- include('../template/sidebar') -%>
    <div class="content-login bg-login m-login">
        <h2>Nueva Status</h2>
        <form action="/estatus/create" method="POST" class="form">
            <div class="input-form">
                <label for="name">Nombre del estatus</label>
                <input id="name" type="text" name="name" required />
            </div>
            <div class="input-form m-top">
                <label for="status">importancia del estatus</label>
                <select name="color">
                    <option selected>Elije un color</option>
                    <option value="verde">verde - baja</option>
                    <option value="naranja">naranja - media</option>
                    <option value="rojo">rojo - alta</option>
                </select>
            </div>
            <button class="btn btn-login btn-click" type="submit">
                Guardar
            </button>
        </form>
        <div class="m-top">
            <% data.forEach((element, i )=> { %>
            <div class="card">
                <div class="card-title">
                    <p><b><%= i+1 %></b> - <span><%= element.dataValues.name%></span></p>
                </div>
                <div class="card-body">
                    <p><%= element.dataValues.color%></p>
                </div>
                <div class="card-info">
                    <a class="btn-icon bg-icon-edit" href="/estatus/editar/<%= element.id %>">
                        <ion-icon name="create-outline"></ion-icon>
                    </a>
                    <a class="btn-icon bg-icon-delete" href="/estatus/eliminar/<%= element.id %>">
                        <ion-icon name="trash-outline"></ion-icon>
                    </a>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</main>

<%- include('../template/footer') -%>